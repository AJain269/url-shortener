{
  "compilerOptions": {
    /* File Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment */
    "target": "ES2020",               // modern JS features, supported by Node
    "module": "commonjs",             // Node.js modules
    "lib": ["ES2020"],                // available JS APIs
    "types": ["node", "express"],     // type definitions for Node & Express

    /* Debugging & Builds */
    "sourceMap": true,                // useful for debugging
    "declaration": true,              // generate .d.ts files
    "declarationMap": true,

    /* Type Safety */
    "strict": true,
    "esModuleInterop": true,          // allow import express from 'express'
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
